<style>
    body {
        font-family: Arial, sans-serif;
        padding: 20px;
        background: #f2f2f2;
    }
    h1 {
        text-align: center;
    }
    .room-buttons button {
        margin: 5px;
        padding: 10px 20px;
        font-size: 16px;
    }
    .status-box {
        margin-top: 20px;
        background: white;
        padding: 15px;
        border-radius: 8px;
        width: 350px;
    }
    select {
        padding: 5px;
        margin-left: 10px;
    }
    .status-on {
        color: green;
        font-weight: bold;
    }
    .status-off {
        color: red;
        font-weight: bold;
    }
</style>
</head>
<body>

<h1>Smart Home Manager</h1>
<p><strong>House Name:</strong> My Smart Home</p>
<p><strong>Current Time:</strong> <span id="time"></span></p>

<div class="room-buttons">
    <button onclick="showRoom('Living Room')">Living Room</button>
    <button onclick="showRoom('Kitchen')">Kitchen</button>
    <button onclick="showRoom('Garage')">Garage</button>
    <button onclick="showRoom('Bedroom')">Bedroom</button>
    <button onclick="showRoom('Bathroom')">Bathroom</button>
</div>

<div id="roomStatus" class="status-box" style="display:none;">
    <h2 id="roomName"></h2>
    <div id="controlsContainer"></div>
</div>

<script>
let rooms = {
    "Living Room": {
        "Light": false,
        "Window": false,
        "TV": false,
        "Fan": false
    },
    "Kitchen": {
        "Light": false,
        "Window": false,
        "Stove": false,
        "Kettle": false,
        "Dishwasher": false
    },
    "Garage": {
        "Light": false,
        "Window": false,
        "Rolling Door": false,
        "Washing Machine": false
    },
    "Bedroom": {
        "Light": false,
        "Window": false,
        "Bedside Lamp": false,
        "Air Conditioner": false
    },
    "Bathroom": {
        "Light": false,
        "Window": false,
        "Toilet": false,
        "Bathtub": false
    }
};

let currentRoom = "";

function updateTime() {
    document.getElementById("time").textContent = new Date().toLocaleTimeString();
}
setInterval(updateTime, 1000);
updateTime();

function showRoom(roomName) {
    currentRoom = roomName;
    document.getElementById("roomName").textContent = roomName;
    let container = document.getElementById("controlsContainer");
    container.innerHTML = "";

    for (let device in rooms[roomName]) {
        let label = document.createElement("label");
        label.textContent = device + ": ";

        let select = document.createElement("select");
        select.innerHTML = `
            <option value="true">ON / OPEN</option>
            <option value="false">OFF / CLOSED</option>
        `;
        select.value = rooms[roomName][device];
        updateSelectColor(select);

        select.onchange = function() {
            rooms[roomName][device] = (this.value === "true");
            updateSelectColor(this);
        };

        let p = document.createElement("p");
        p.appendChild(label);
        p.appendChild(select);
        container.appendChild(p);
    }

    document.getElementById("roomStatus").style.display = "block";
}

function updateSelectColor(selectElement) {
    if (selectElement.value === "true") {
        selectElement.className = "status-on";
    } else {
        selectElement.className = "status-off";
    }
}
</script>

</body>
</html>
